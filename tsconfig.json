{
	"compilerOptions": {
		"target": "ES2017",
		"module": "ESNext",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "react-jsx",
		"incremental": true,
		"plugins": [
			{
				"name": "next"
			}
		],
		"paths": {
			"@/*": ["./src/*"],
			"sanity.config": ["./sanity.config.ts"]
		}
	},
	"include": [
		".next/types/**/*.ts",
		"/next-env.d.ts",
		".next/dev/types/**/*.ts",
		"**/*.mts",
		"src/app/sitemap.js"
	],
	"exclude": ["node_modules"]
}
